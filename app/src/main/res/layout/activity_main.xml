<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- SurfaceView pour le Canvas -->
    <com.uqac.flappybear.GameView
        android:id="@+id/canvas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </com.uqac.flappybear.GameView>

    <!-- Zone des boutons de jeu -->
    <LinearLayout
        android:id="@+id/gameButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:padding="15dp">

        <!-- Bouton Pause -->
        <ImageView
            android:id="@+id/pauseBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/pause_button"
            android:contentDescription="@string/pause_button"
            android:onClick="pauseGame" />

        <!-- Bouton Audio -->
        <ImageView
            android:id="@+id/audioBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/audio_button"
            android:contentDescription="@string/audio_button"
            android:layout_marginStart="15dp"
            android:clickable="false"
            android:focusable="false" />
    </LinearLayout>

    <!-- Barre de carburant et score -->

    <!-- Menu du jeu -->
    <LinearLayout
        android:id="@+id/metrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="15dp"
        tools:layout_editor_absoluteX="605dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Barre de carburant -->
        <ProgressBar
            android:id="@+id/fuelBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"></ProgressBar>

        <!-- Score -->
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="1"
        android:visibility="visible">

        <!-- Titre du menu -->
        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FlappyBear"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Bouton de dÃ©marrage -->
        <ImageView
            android:id="@+id/menuStartBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/play_button"
            android:contentDescription="@string/start_button"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
